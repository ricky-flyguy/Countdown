<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timer_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:visibility="visible">

    <TextView
        android:id="@+id/timer_list_item_title"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Title"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/timer_list_item_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/timer_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_timer_date"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/timer_list_item_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_timer_remaining"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timer_list_item_options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:visibility="gone">

        <Button
            android:id="@+id/options_layout_option_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/options_layout_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_delete" />


    </LinearLayout>



</LinearLayout>
